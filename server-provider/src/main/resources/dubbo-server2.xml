<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://code.alibabatech.com/schema/dubbo
                           http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--提供方应用消息,用于计算依赖关系-->
    <dubbo:application name="HelloServiceProvider2" owner="dyfSama"/>

    <!--使用zookeeper注册中心暴露服务地址-->
    <dubbo:registry address="zookeeper://192.168.56.201:2181"/>

    <!--使用dubbo协议在20880端口暴露服务-->
    <dubbo:protocol name="dubbo" port="20881"/>

    <!--声明需要暴露的服务接口-->
    <dubbo:service interface="com.dyf.dubbo.IHelloService" ref="helloService"  timeout="50000"/>

    <!--具体的实现bean-->
    <bean id="helloService" class="com.dyf.dubbo.HelloServiceImpl2"/>

</beans>